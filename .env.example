# =============================================================================
# Smart University ERP System - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production-min-50-chars
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Environment: development, staging, production
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_DB=university_erp
POSTGRES_USER=erp_admin
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full Database URL (alternative to individual settings)
DATABASE_URL=postgresql://erp_admin:your-secure-database-password@localhost:5432/university_erp

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Celery Broker and Backend
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=your-jwt-secret-key-should-be-long-and-random
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# -----------------------------------------------------------------------------
# Email Configuration (SMTP)
# -----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=University ERP <noreply@university.edu>

# -----------------------------------------------------------------------------
# AWS S3 Storage (Optional - for file uploads)
# -----------------------------------------------------------------------------
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=university-erp-bucket
AWS_S3_REGION_NAME=us-east-1

# -----------------------------------------------------------------------------
# AI Services Configuration
# -----------------------------------------------------------------------------
# FastAPI AI Service
AI_SERVICE_URL=http://localhost:8001
AI_SERVICE_API_KEY=your-ai-service-api-key

# Face Recognition Settings
FACE_RECOGNITION_TOLERANCE=0.6
FACE_RECOGNITION_MODEL=hog

# ML Model Paths
ML_MODELS_PATH=/app/ai_services/models

# -----------------------------------------------------------------------------
# Third-Party API Keys
# -----------------------------------------------------------------------------
# Google OAuth (for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# SMS Gateway (for OTP)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=UNIERP

# Payment Gateway (Razorpay/Stripe)
PAYMENT_GATEWAY=razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=DEBUG
LOG_FILE_PATH=/var/log/university_erp/

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# CSRF
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Session
SESSION_COOKIE_AGE=86400
SESSION_EXPIRE_AT_BROWSER_CLOSE=True

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=False
